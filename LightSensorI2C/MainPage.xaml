<Page
    x:Class="LightSensorI2C.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightSensorI2C"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBox x:Name="textBoxLight" Grid.Row="1" Grid.Column="1" Margin="15" Text="..." IsReadOnly="True" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
        <TextBox x:Name="textBlockStatus"  Margin="7" Text="Waiting I2c..." 
                            IsReadOnly="True" HorizontalAlignment="Left" FontSize="16"/>

        <Button x:Name="buttonExit" Content="Exit" Margin="15" Click="buttonExit_Click"/>

    </StackPanel>
</Page>
